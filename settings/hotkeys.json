{
  "Hotkeys": [
    {"key": "\\+`", "action": "toggle_hotkeys"},

    {"key": "ctrl+'", "action": "reset_head"},
    {"key": "ctrl+;", "action": "reset_eye"},
    {"key": "ctrl+;+1", "action": "disable_eye_yaw"},
    {"key": "ctrl+;+2", "action": "disable_eye"},
    {"key": "ctrl+[", "action": "reset_hand_left"},
    {"key": "ctrl+]", "action": "reset_hand_right"},

    {"key": "/+`", "action": "enable_tongue"},
    {"key": "/+1", "action": "set_tongue"},
    {"key": "[+`", "action": "enable_fingers_left"},
    {"key": "[+1", "action": "set_finger_0_left"},
    {"key": "[+2", "action": "set_finger_1_left"},
    {"key": "[+3", "action": "set_finger_2_left"},
    {"key": "[+4", "action": "set_finger_3_left"},
    {"key": "[+5", "action": "set_finger_4_left"},
    {"key": "]+`", "action": "enable_fingers_right"},
    {"key": "]+1", "action": "set_finger_0_right"},
    {"key": "]+2", "action": "set_finger_1_right"},
    {"key": "]+3", "action": "set_finger_2_right"},
    {"key": "]+4", "action": "set_finger_3_right"},
    {"key": "]+5", "action": "set_finger_4_right"},
    {"key": "[+f1", "action": "left_fingers_1.0_1.0_1.0_1.0_1.0"},
    {"key": "[+f2", "action": "left_fingers_0.0_0.0_0.0_0.0_0.0"},
    {"key": "[+f3", "action": "left_fingers_0.0_0.0_1.0_0.0_0.0"},
    {"key": "[+f4", "action": "left_fingers_0.0_1.0_0.0_0.0_0.0"},
    {"key": "[+f5", "action": "left_fingers_0.0_1.0_1.0_0.0_0.0"},
    {"key": "[+f6", "action": "left_fingers_0.0_1.0_0.0_0.0_1.0"},
    {"key": "[+f7", "action": "left_fingers_1.0_1.0_0.0_0.0_0.0"},
    {"key": "[+f8", "action": "left_fingers_1.0_0.0_0.0_0.0_0.0"},
    {"key": "]+f1", "action": "right_fingers_1.0_1.0_1.0_1.0_1.0"},
    {"key": "]+f2", "action": "right_fingers_0.0_0.0_0.0_0.0_0.0"},
    {"key": "]+f3", "action": "right_fingers_0.0_0.0_1.0_0.0_0.0"},
    {"key": "]+f4", "action": "right_fingers_0.0_1.0_0.0_0.0_0.0"},
    {"key": "]+f5", "action": "right_fingers_0.0_1.0_1.0_0.0_0.0"},
    {"key": "]+f6", "action": "right_fingers_0.0_1.0_0.0_0.0_1.0"},
    {"key": "]+f7", "action": "right_fingers_1.0_1.0_0.0_0.0_0.0"},
    {"key": "]+f8", "action": "right_fingers_1.0_0.0_0.0_0.0_0.0"},

    {"key": "ctrl+up", "action": "up"},
    {"key": "ctrl+down", "action": "down"},
    {"key": "ctrl+z", "action": "prone"},
    {"key": "ctrl+c", "action": "squat"},
    {"key": "up", "action": "head_pitch_up"},
    {"key": "down", "action": "head_pitch_down"},
    {"key": "left", "action": "head_yaw_left"},
    {"key": "right", "action": "head_yaw_right"},
    {"key": "-", "action": "grab_left"},
    {"key": "=", "action": "grab_right"},
    {"key": "[", "action": "trigger_left"},
    {"key": "]", "action": "trigger_right"},
    {"key": ",", "action": "joystick_middle_right"},
    {"key": ".", "action": "joystick_middle_right"},
    {"mouse": "left", "action": "trigger_left"},
    {"mouse": "left", "action": "joystick_middle_right_delay"},
    {"mouse": "right", "action": "trigger_right"},
    {"mouse": "left+middle", "action": "grab_left"},
    {"mouse": "right+middle", "action": "grab_right"},
    {"mouse": "middle", "action": "joystick_middle_right"},
    {"mouse": "scroll_up", "action": "joystick_up_right"},
    {"mouse": "scroll_down", "action": "joystick_down_right"}
  ]
}
